use std::env;
use std::path::PathBuf;

fn build(header: &str, name: &str) {
    let bindings = bindgen::Builder::default()
        .header(format!("./inc/{}.h", header))
        .dynamic_library_name(name)
        .parse_callbacks(Box::new(bindgen::CargoCallbacks))
        .generate()
        .expect("Unable to generate bindings");

    let out_path = PathBuf::from(env::var("OUT_DIR").unwrap());
    bindings
        .write_to_file(out_path.join(format!("{}.rs", name)))
        .expect("Couldn't write bindings!");
}

fn main() {
    build("usbtc08", "TC08Bindings");
    build("ps2000", "PS2000Bindings");
    build("ps2000aApi", "PS2000ABindings");
    build("ps3000", "PS3000Bindings");
    build("ps3000aApi", "PS3000ABindings");
    build("ps4000Api", "PS4000Bindings");
    build("ps4000aApi", "PS4000ABindings");
    build("ps5000Api", "PS5000Bindings");
    build("ps5000aApi", "PS5000ABindings");
    build("ps6000Api", "PS6000Bindings");
    build("ps6000aApi", "PS6000ABindings");
}
